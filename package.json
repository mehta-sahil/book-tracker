{
  "name": "book-tracker",
  "version": "1.0.0",
  "description": "A simple book tracking application built with MERN stack",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": ["books", "tracker", "mern", "react", "nodejs", "mongodb"],
  "author": "",
  "license": "ISC"
}
